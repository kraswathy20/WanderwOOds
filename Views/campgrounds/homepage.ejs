<% layout('layouts/boilerplate') -%>

<body>
    <div id="cluster-map" style="width: 100%; height: 270px;"></div>
    <h1 class="text-center">All Campgrounds</h1>
    <!-- <button><a href="/campground/new" style="text-decoration: none;">New Campground</a></button> -->
    
        <% for(let camp of camps) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (camp.images && camp.images.length > 0) { %>
                        <img crossorigin="anonymous" src="<%= camp.images[0].url %>" alt="" srcset="" class="img-fluid">
                        <% } else {%>
                        <img crossorigin="anonymous" src="https://res.cloudinary.com/dyebwfniv/image/upload/v1718739345/WanderWoodsCamp/bzs9g3eohjbymroxjzux.jpg" alt="" srcset="" class="img-fluid">
                         <% } %>   
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %></h5>
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text"><small class="text-muted"><%= camp.location %></small></p>
                            <a href="/campground/<%= camp._id %>" class="btn btn-primary">View Details</a>
                    </div>
                    </div>
                </div>
            </div>
            <% } %>
</body>
<script>
    const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
    const camps = { features: <%- JSON.stringify(camps) %>}
    
  </script>
<script src="/javascript/clusterMap.js"></script>
