<% layout('./layouts/boilerplate') -%>
<div class="container w-50">
    <div class="row mb-3">
        <div class=" col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
            <div class="card p-1 shadow">
                <img src="https://images.unsplash.com/photo-1528433556524-74e7e3bfa599?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTA1fHxjYW1wfGVufDB8fDB8fHww" alt="" srcset=""
                class="card-img-top">
                <div class="card-body">
                <h5 class="card-title text-center">Register</h5>
                <form action="/register" method="post" class="validate-form" novalidate>
                    <div class="mt-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Enter Username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="mt-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" id="title" placeholder="Enter Email" required>
                            <div class="valid-feedback">
                                Looks good!
                        </div>
                        <div class="mt-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="title" placeholder="Enter Password" required>
                            <div class="valid-feedback">
                                Looks good!
                        </div>
                        <div class="mt-3 mb-2">
                            <button class="btn btn-success w-100">Register</button>
                        </div>
                        <p class="mb-0 text-center">Existing User?<a href="/login">Login</a></p>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>